<Window x:Class="nadoelo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nadoelo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBox x:Name="Input1" Margin="0,0,0,10"/>
            <TextBox x:Name="Input2" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="+" Width="50" Margin="5" Click="Add_Click"/>
                <Button Content="−" Width="50" Margin="5" Click="Subtract_Click"/>
                <Button Content="×" Width="50" Margin="5" Click="Multiply_Click"/>
                <Button Content="÷" Width="50" Margin="5" Click="Divide_Click"/>
            </StackPanel>

            <TextBlock x:Name="ResultText" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>
